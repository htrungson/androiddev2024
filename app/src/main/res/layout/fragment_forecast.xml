<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/frame_background" <!-- No need for .9.png in the reference -->
    >
    <!-- Blue Forecast Area -->
    <LinearLayout
        android:id="@+id/forecast_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2196F3" <!-- Blue color -->
    android:padding="16dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/forecast_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forecast"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_gravity="center_horizontal"/>

    <!-- You can add more views here as needed for the forecast display -->

</LinearLayout>

    </LinearLayout>
